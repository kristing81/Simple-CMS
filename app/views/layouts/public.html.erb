<!DOCTYPE html>
<html>
  <head>
    <title>Simple Cms<%= "  | #{@page_title}" if @page_title %></title>
      <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>
    <div id="header">
      <h1>Simple CMS</h1>
    </div>
    <div id="main">
      <div id="navigation">
        <%= render(:partial => 'layouts/navigation', :locals => {:subjects =>@subjects}) %>
        <%= link_to("Log In", :controller => 'access', :action => 'login')%>
      </div>
        <div id="content">
          <%= yield %>
        </div>
        <div class="clear"></div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Kristin Gonzalez</p>
    </div>
  </body>
</html>